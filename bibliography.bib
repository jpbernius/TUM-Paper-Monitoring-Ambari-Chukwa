keywords = {Large Scale Distributed Systems,Process Monitoring and Control,Service-Oriented Architecture (SOA),Web Service (WS) Technologies},
pages = {5799--5804},
title = {{Technologies for SOA-based distributed large scale process monitoring and control systems}},
year = {2012}
}
